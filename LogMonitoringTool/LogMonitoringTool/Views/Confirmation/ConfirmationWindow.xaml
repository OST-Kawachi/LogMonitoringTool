<Window
	x:Class="LogMonitoringTool.Views.Analysis.Confirmation.ConfirmationWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:LogMonitoringTool.Views.Analysis.Confirmation"
	xmlns:vm="clr-namespace:LogMonitoringTool.ViewModels.Confirmation"
	mc:Ignorable="d"
	Title="{ Binding TitleText }"
	Height="300"
	Width="300">

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Label
			Content="{ Binding FilePath }"
			Grid.Row="0"
			IsEnabled="False" />

		<ScrollViewer
			Grid.Row="1" >
			<TextBox
				Text="{ Binding TextOfFile }"
				IsEnabled="False" />
		</ScrollViewer>

		<Button
			Grid.Row="2"
			Content="{ Binding CloseButtonText }"
			Click="OnClickCloseButton" />

	</Grid>
		
</Window>
