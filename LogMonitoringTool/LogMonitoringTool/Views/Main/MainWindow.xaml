<Window
	x:Class="LogMonitoringTool.Views.Main.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:LogMonitoringTool.ViewModels.Main"
	mc:Ignorable="d"
	Title="{ Binding TitleText }"
	Height="300"
	Width="300" >
	
	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>
	
	<Grid>
		
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<!-- 選択したログファイル表示欄 -->
		<Label
			Grid.Row="0" 
			Content="{ Binding SelectedLogFileName }" />

		<!-- ログファイル参照ボタン -->
		<Button
			Grid.Row="1"
			Content="{ Binding BrowseLogFileButtonContent }" />

		<!-- ログ内容確認ボタン -->
		<Button
			Grid.Row="2"
			Content="{ Binding ConfirmLogButtonContent }" />

		<!-- 解析項目一覧表示ボタン -->
		<Button
			Grid.Row="3"
			Content="{ Binding DisplayAnalysisListButtonContent }" />

		<!-- ログ解析開始ボタン -->
		<Button
			Grid.Row="4"
			Content="{ Binding StartLogAnalysisButtonContent }" />

		<!-- 閉じるボタン -->
		<Button
			Grid.Row="5"
			Content="{ Binding CloseButtonContent }"
			Command="{ Binding ApplicationCloseCommand }" />

	</Grid>
	
</Window>
